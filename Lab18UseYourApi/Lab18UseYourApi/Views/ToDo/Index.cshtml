@model ToDoViewModel

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/normalize.css" type="text/css" />
<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css"
      rel="stylesheet" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB"
      crossorigin="anonymous">
<link rel="stylesheet" href="~/StyleSheet.css" type="text/css" />

<div class="label">
    <h3>ToDos</h3>
</div>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="ToDo" asp-action="Index" method="get">
    <p>
        Search To-Do Items: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ToDos[0].ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDos[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDos[0].Finished)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDos[0].ListID)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var todo in Model.ToDos)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => todo.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => todo.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => todo.Finished)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => todo.ListID)
                </td>
                <td>
                    <a asp-action="Update" asp-route-id="@todo.ID">Update</a> |
                    <a asp-action="Details" asp-route-id="@todo.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@todo.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="button" class="home-button" value="Return to Home" onclick="window.location.href='/'" />